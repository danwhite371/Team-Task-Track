{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "playwright"] // Ensure "node" is here
  },
  "include": [
    "**/*.ts", // This ensures all .ts files are included
    "**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
